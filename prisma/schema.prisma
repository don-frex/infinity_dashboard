// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Agency {
  id        String    @id @default(uuid())
  name      String
  city      String    @default("") // Default to empty string if not present in CSV or handle in seed
  state     String    @default("")
  createdAt DateTime  @default(now())
  contacts  Contact[]
}

model Contact {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String
  agencyId  String
  agency    Agency   @relation(fields: [agencyId], references: [id])
  createdAt DateTime @default(now())
}

model UserUsage {
  id     String   @id @default(uuid())
  userId String // Clerk User ID
  date   DateTime @default(now()) // We will store just the date part or handle daily logic in code
  count  Int      @default(0)

  @@unique([userId, date]) // Ensure one record per user per day
}
