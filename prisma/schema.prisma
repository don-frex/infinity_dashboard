// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Agency {
  id        String    @id @default(uuid())
  name      String
  city      String    @default("")
  state     String    @default("")
  stateCode String    @default("")
  type      String    @default("")
  population Int      @default(0)
  website   String    @default("")
  createdAt DateTime  @default(now())
  contacts  Contact[]
}

model Contact {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String
  department String   @default("")
  title     String   @default("")
  agencyId  String
  agency    Agency   @relation(fields: [agencyId], references: [id])
  createdAt DateTime @default(now())
  unlockedBy UnlockedContact[]
}

model UnlockedContact {
  id        String   @id @default(uuid())
  userId    String
  contactId String
  contact   Contact  @relation(fields: [contactId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, contactId])
}

model UserUsage {
  id     String   @id @default(uuid())
  userId String // Clerk User ID
  date   DateTime @default(now()) // We will store just the date part or handle daily logic in code
  count  Int      @default(0)

  @@unique([userId, date]) // Ensure one record per user per day
}
